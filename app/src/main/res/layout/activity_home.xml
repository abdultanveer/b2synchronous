<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginTop="119dp"
        android:onClick="handleClicks"
        android:text="finish"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="enter contact"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/etContact"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:onClick="serviceHandler"
        android:text="start"
        app:layout_constraintBaseline_toBaselineOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="@+id/etContact" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="51dp"
        android:onClick="serviceHandler"
        android:text="stop"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnStart"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnBind"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="31dp"
        android:onClick="serviceHandler"
        android:text="bind"
        app:layout_constraintEnd_toStartOf="@+id/btnUnbind"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/btnUnbind"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="7dp"
        android:onClick="serviceHandler"
        android:text="unbind"
        app:layout_constraintBottom_toBottomOf="@+id/btnBind"
        app:layout_constraintStart_toStartOf="@+id/btnStart" />

</androidx.constraintlayout.widget.ConstraintLayout>